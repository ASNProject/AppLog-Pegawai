<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:elevation="5dp"
    android:id="@+id/card"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/birumandantua">
        <TextView
            android:id="@+id/onamakolam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kolam"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"></TextView>

        <Button
            android:id="@+id/buttonpilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/buttondeletekolam"
            android:layout_toLeftOf="@+id/buttondeletekolam"
            android:background="@drawable/button3"
            android:text="Pilih"
            android:textColor="@color/birumandantua"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/buttondeletekolam"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_delete_black_24dp"
            android:textColor="@color/birumandantua"></Button>
    </RelativeLayout>

</androidx.cardview.widget.CardView>