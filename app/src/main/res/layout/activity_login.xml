<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Future"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/birumandantua"
        ></TextView>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="of the Pond"
        android:textStyle="bold"
        android:layout_below="@+id/text1"
        android:textSize="30dp"
        android:textColor="@color/birumandantua"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"></TextView>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang,"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        ></TextView>
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini membantu anda untuk memberikan"
        android:textStyle="italic"
        android:layout_below="@+id/text3"
        android:layout_marginLeft="20dp"
        ></TextView>
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="laporan serta penginputan data kolam."
        android:textStyle="italic"
        android:layout_below="@+id/text4"
        android:layout_marginLeft="20dp"
        ></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/text5"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/d1">

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="LOGIN"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/iemaillogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/text6"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/kotak1"
            android:gravity="center"
            android:hint="Email"></EditText>

        <EditText
            android:id="@+id/ipasswordlogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/iemaillogin"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/kotak1"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"></EditText>

        <Button
            android:id="@+id/buttonlogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ipasswordlogin"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/button1"
            android:text="LOGIN"
            android:textColor="#FFFFFF"></Button>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonlogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum punya akun?"></TextView>

            <TextView
                android:id="@+id/masukregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Daftar"
                android:textColor="#FFFFFF"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:text="Desain by: ASNProject, Supported by: ADI, Sembada Group"
            android:textSize="10dp"
            android:textStyle="italic"></TextView>
    </RelativeLayout>
</RelativeLayout>